<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_drawable"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/gradient_bg"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="1dp"
    android:weightSum="4"
    tools:context=".Admin_home">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bus Information"
            android:paddingTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/background_card"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="monospace"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="1dp"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_bus"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:paddingStart="10dp"
                android:paddingEnd="35dp"
                android:fontFamily="casual"
                android:text="Add a bus"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="monospace"
                android:backgroundTint="#FDD835"
                app:rippleColor="#3EEABCD7"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_view_bus"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:paddingStart="10dp"
                android:paddingEnd="35dp"
                android:fontFamily="casual"
                android:text="View bus"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="monospace"
                android:backgroundTint="#FDD835"
                app:rippleColor="#3EEABCD7"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="1dp"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_route"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:paddingStart="5dp"
                android:paddingEnd="25dp"
                android:fontFamily="casual"
                android:text="Add a route"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="monospace"
                android:backgroundTint="#FDD835"
                app:rippleColor="#3EEABCD7"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_view_route"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:paddingStart="5dp"
                android:paddingEnd="25dp"
                android:fontFamily="casual"
                android:text="View route"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="monospace"
                android:backgroundTint="#FDD835"
                app:rippleColor="#3EEABCD7"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="70dp"
            android:paddingEnd="1dp"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_view_bus_not_working"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:paddingStart="10dp"
                android:fontFamily="casual"
                android:text="Bus Information"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="monospace"
                android:backgroundTint="#FDD835"
                app:rippleColor="#3EEABCD7"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="70dp"
            android:paddingEnd="1dp">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_view_tickets"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:paddingStart="10dp"
                android:paddingEnd="55dp"
                android:fontFamily="casual"
                android:text="View Tickets"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="monospace"
                android:backgroundTint="#FDD835"
                app:rippleColor="#3EEABCD7"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="70dp"
            android:paddingEnd="1dp">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_view_complaints"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:paddingStart="10dp"
                android:paddingEnd="15dp"
                android:fontFamily="casual"
                android:text="View Complaints"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="monospace"
                android:backgroundTint="#FDD835"
                app:rippleColor="#3EEABCD7"/>
        </LinearLayout>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>